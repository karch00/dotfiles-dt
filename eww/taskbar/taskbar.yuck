(defwidget taskbar-container []
  (box
    :orientation "v"
    :width 60
    :height 1060
    :valign "start"
    :halign "center"
    :class "taskbar-container"
  )
)

(defwindow taskbar
  :monitor 0
  :geometry (
    geometry
    :x "10px"
    :y "10px"
    :width "60px"
    :height "1060px"
    :anchor "top left"
  )
  :stacking "fg"
  :windowtype "dock"

  (taskbar-container)
)
